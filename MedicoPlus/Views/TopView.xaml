<UserControl x:Class="MedicoPlus.Views.TopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicoPlus.Views"
             mc:Ignorable="d">
    <UserControl.Resources>
        <XmlDataProvider x:Key="Provider" Source="../Helpers/view.xml" XPath="documents"/>
    </UserControl.Resources>
        
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Width="150" Height="150" x:Name="lobby" Click="lobby_Click">
                <Button.Background>
                    <ImageBrush ImageSource="{Binding XPath=ImageName}" TileMode="Tile" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="{Binding XPath=Name}" FontSize="12"/>
        </StackPanel>
        
    </Grid>
</UserControl>
