<Window x:Class="MedicoPlus.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ff="clr-namespace:MedicoPlus.Helpers"
        xmlns:local="clr-namespace:MedicoPlus.Views"
        mc:Ignorable="d"
        Title="МедікоПлюс. Вхід до системи" Height="180" Width="331">
    <Grid Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}">
        <Label x:Name="label" Content="Логін" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Width="84" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="login" HorizontalAlignment="Left" Height="23" Margin="129,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Label x:Name="label1" Content="Пароль" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="84" HorizontalContentAlignment="Center"/>
        
        <Button x:Name="Enter" Content="Увійти" HorizontalAlignment="Center" Margin="0,107,0,0" VerticalAlignment="Top" Width="75" Click="Enter_Click"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="129,65,0,0" VerticalAlignment="Top" Width="160"/>

    </Grid>
</Window>
